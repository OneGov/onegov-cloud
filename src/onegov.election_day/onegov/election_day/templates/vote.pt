<div metal:use-macro="layout.base" i18n:domain="onegov.election_day">
    <tal:block metal:fill-slot="content">
        <h2>${vote.title}</h2>

        <tal:block condition="vote.answer">
            <h3>
                <span i18n:translate="">Result:</span>
                <div metal:use-macro="layout.macros['answer']" tal:define="answer vote.answer" />
            </h3>

            <dl>
                <dt class="accepted" i18n:translate="">Yays</dt>
                <dd class="accepted" >${vote.yays} / ${'{0:.2f}'.format(vote.yays_percentage)} %</dd>
                <dt class="rejected" i18n:translate="">Nays</dt>
                <dd class="rejected" >${vote.nays} / ${'{0:.2f}'.format(vote.nays_percentage)} %</dd>
            </dl>
        </tal:block>

        <dl>
            <dt i18n:translate="">Counted municipalities</dt>
            <dd><div metal:use-macro="layout.macros['progress']" tal:define="progress vote.progress" /></dd>
            <dt i18n:translate="">Elegible Voters</dt>
            <dd>${vote.elegible_voters}</dd>
            <dt i18n:translate="">Cast Ballots</dt>
            <dd>${vote.cast_ballots}</dd>
            <dt i18n:translate="">Turnout</dt>
            <dd>${'{0:.2f}'.format(vote.turnout)} %</dd>
            <dt i18n:translate="">Empty Ballots</dt>
            <dd>${vote.empty}</dd>
            <dt i18n:translate="">Invalid Ballots</dt>
            <dd>${vote.invalid}</dd>
            <dt i18n:translate="">Valid Ballots</dt>
            <dd>${vote.yays + vote.nays}</dd>
        </dl>
    </tal:block>
</div>