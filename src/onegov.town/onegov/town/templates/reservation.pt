<div metal:use-macro="layout.base" i18n:domain="onegov.town">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row" tal:condition="not:available">
            <div class="small-12 columns">
                <div class="panel callout" i18n:translate>
                    This allocation is no longer available.
                </div>
            </div>
        </div>
        <div class="row" tal:condition="available">
            <div class="small-12 columns">
                <div class="page-text">
                    <i class="fa fa-calendar"></i> <strong>${layout.format_date(allocation.display_start(), 'date')}</strong>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="small-12 medium-7 large-5 columns">
                <div metal:use-macro="layout.macros['form']" />
            </div>
        </div>
    </tal:block>
</div>
