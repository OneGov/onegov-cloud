<div metal:use-macro="layout.base" i18n:domain="onegov.town">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="atoz-block" tal:repeat="item model.pages_by_letter().items()">
            <h2>${item[0]}</h2>
            <ul>
                <li tal:repeat="page item[1]">
                    <a href="${request.link(page)}">${page.title}</a>
                    <metal:hint tal:define="item page" use-macro="layout.macros['hidden_from_public_hint']" />
                </li>
            </ul>
        </div>
    </tal:block>
</div>
