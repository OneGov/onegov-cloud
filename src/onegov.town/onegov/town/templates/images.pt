<div metal:use-macro="layout.base" i18n:domain="onegov.town">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <h2 i18n:translate="">Upload</h2>
        <div class="row">
            <div class="small-12 columns">
                <tal:block metal:use-macro="layout.macros.dropzone" />
            </div>
        </div>
        <h2 i18n:translate="">All Images</h2>
        <tal:block repeat="chunk layout.chunks(images, 6)" condition="images">
            <div class="row">
                <div tal:repeat="image chunk" class="small-2 columns">
                    <img tal:condition="image" class="thumbnail" src="${image}" />
                </div>
            </div>
        </tal:block>
        <tal:block condition="not:images">
            <p i18n:translate="">No images uploaded yet</p>
        </tal:block>
    </tal:block>
</div>