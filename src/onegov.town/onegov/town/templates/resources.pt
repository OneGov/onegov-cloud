<div metal:use-macro="layout.base" i18n:domain="onegov.town">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <p tal:condition="not:resources" i18n:translate="">No reservation resources defined yet.</p>

        <ul tal:condition="resources" class="resources">
            <li tal:repeat="resource resources">
                <a class="resource-title" tal:attributes="href request.link(resource)">${resource.title}</a><metal:hint use-macro="layout.macros['hidden-from-public-hint']" tal:define="item resource" />
                <div class="resource-lead">${resource.meta.get('lead')}</div>
            </li>
        </ul>
    </tal:block>
</div>
