<div metal:use-macro="layout.base" i18n:domain="onegov.town">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <dl>
            <dt i18n:translate="">State</dt>
            <dd>${state}</dd>

            <dt i18n:translate="">Title</dt>
            <dd>${event.title}</dd>

            <dt i18n:translate="">Description</dt>
            <dd tal:content="structure description" />

            <dt i18n:translate="">Location</dt>
            <dd>${event.location}</dd>

            <dt i18n:translate="">Tags</dt>
            <dd>
                <ul>
                    <li tal:repeat="tag event.tags">${tag}</li>
                </ul>
            </dd>

            <dt i18n:translate="">Date and time</dt>
            <dd>${layout.format_date(event.localized_start, 'datetime')}-${layout.format_date(event.localized_end, 'time')} (${event.timezone})</dd>

            <dt i18n:translate="">Recurrence</dt>
            <dd>${recurrence}</dd>

            <dt i18n:translate="">All dates</dt>
            <dd>
                <ul>
                    <li tal:repeat="occurrence occurrences">${layout.format_date(occurrence, 'date')}</li>
                </ul>
            </dd>

        </dl>
    </tal:block>
</div>
