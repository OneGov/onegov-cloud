<div metal:use-macro="layout.base" i18n:domain="onegov.town">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="large-8 medium-8 columns">
            <!-- todo: use localized dates (display_start etc) -->
            <div class="event-lead">
                ${event.event.location}, ${layout.format_date(event.start, 'datetime')}-${layout.format_date(event.end, 'time')}
            </div>

            <div class="event-tags">
                <span tal:repeat="tag event.display_tags" class="event-tag">${tag}</span>
            </div>

            <div class="event-description">
                ${event.event.description}
            </div>
        </div>


        <div class="large-4 medium-4 columns">
            <div class="event-occurrences">
                <span i18n:translate="">All occurrences of this event</span>
                <ul tal:define="occurrences event.event.occurrence_dates()">
                    <li tal:repeat="occurrence occurrences">
                        ${layout.format_date(occurrence, 'date')}
                    </li>
                </ul>
            </div>
        </div>

    </tal:block>
</div>
