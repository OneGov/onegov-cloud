<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="body">
        <p i18n:translate>
            Good morning,
        </p>
        <p i18n:translate>
            The following reservations are scheduled for today.
        </p>

        <tal:block repeat="(resource_id, title) resources.items()">
            <tal:block condition="resource_id in included_resources" define="reservations reservations.get(resource_id)">
                <div tal:repeat="reservation reservations" class="reservation">
                    <p class="header">
                        <b>${title}</b><br>

                        <b tal:define="start reservation.display_start(); end reservation.display_end()">
                            <!-- simple whole day check: -->
                            <tal:block condition="start.time() != end.time()">
                                ${layout.format_time_range(start, end)}
                            </tal:block>
                            <tal:block condition="start.time() == end.time()">
                                <tal:block i18n:translate>Whole day</tal:block>
                            </tal:block>
                        </b>
                    </p>
                    <div class="body">
                        <p>
                            <tal:block i18n:translate>E-Mail</tal:block><br>
                            ${reservation.email}
                        </p>
                        <p>
                            <tal:block i18n:translate>Quota</tal:block><br>
                            ${reservation.quota}
                        </p>
                        <tal:block condition="resource_id in forms">
                            <tal:block define="form forms[resource_id](data=reservation.submission.data)">
                                <div tal:repeat="fieldset form.fieldsets" tal:condition="reservation.submission" class="fieldset">
                                    <tal:block define="fields fieldset.non_empty_fields" condition="fields">
                                        <p>
                                            <u tal:condition="fieldset.is_visible">${fieldset.label}</u>
                                        </p>

                                        <p tal:repeat="field fields.values()">
                                            ${field.label.text}<br>
                                            ${layout.render_field(field)}
                                        </p>
                                    </tal:block>
                                </div>
                            </tal:block>
                        </tal:block>
                    </div>
                </div>
            </tal:block>
        </tal:block>

        <tal:block repeat="(resource_id, title) resources.items()">
            <tal:block condition="resource_id in included_resources" define="reservations reservations.get(resource_id)">
                <div class="reservation" tal:condition="not:reservations">
                    <p class="header">
                        <b>${title}</b>
                    </p>

                    <div class="body">
                        <p i18n:translate>No reservations today.</p>
                    </div>
                </div>
            </tal:block>
        </tal:block>

        <p i18n:translate>Have a great day!</p>
        <p i18n:translate>The OneGov Cloud Team</p>
    </tal:block>
    <tal:block metal:fill-slot="above-footer">
        <p>
            <span i18n:translate>
                This is the daily reservation overview for <tal:block i18n:name="organisation">${organisation}</tal:block>. If you no longer want to receive this e-mail please contact an administrator so they can remove you from the recipients list.
            </span>
    </tal:block>
</div>
