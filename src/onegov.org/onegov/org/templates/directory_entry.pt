<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <tal:block metal:use-macro="layout.macros.page_content"
                   tal:define="lead entry.lead;text None; people None; contact entry.contact; coordinates entry.directory.enable_map and entry.coordinates">

            <div metal:fill-slot="after-lead">
                <metal:b
                    use-macro="layout.macros['display_fields']"
                    tal:define="
                        fields entry.content_fields;
                        allow_downloads True;
                        allow_views True;
                    "
                />
            </div>

        </tal:block>
    </tal:block>
</div>
