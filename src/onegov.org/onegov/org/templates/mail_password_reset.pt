<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="body">
        <p i18n:translate>Dear Sir or Madam,</p>
        <p i18n:translate>Click the following link to set a new password:</p>
        <p><a href="${url}" i18n:translate>Reset password</a></p>
        <p i18n:translate>
            If you don't want to change your password, you can ignore this
            email.
        </p>
    </tal:block>
</div>
