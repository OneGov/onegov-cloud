<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row" tal:condition="not:completable">
            <div class="small-12 medium-7 large-5 columns">
                <div metal:use-macro="layout.macros['form']" />
            </div>
        </div>
        <div class="row fieldset-display" tal:condition="completable">
            <div class="small-12 medium-12 large-12 columns">
                <div class="panel callout" tal:condition="is_pending">
                    <p i18n:translate="">
                        Please review your data and press "Complete" to finalize the process.
                        If there's anything you'd like to change, click on "Edit" to return
                        to the filled-out form.
                    </p>
                </div>
                <div metal:use-macro="layout.macros['display_form']" />
            </div>
        </div>
        <div class="row fieldset-display-submit" tal:condition="completable and not readonly">
            <div class="small-12 columns">
                <form action="${complete_link}" method="POST">
                    <tal:b condition="price" switch="model.form.payment_method">
                        <tal:b case="'manual'">
                            <label style="display: none;">
                                <input type="radio" name="payment_method" value="manual" checked>
                            </label>
                        </tal:b>
                        <tal:b case="'cc'">
                            <label style="display: none;">
                                <input type="radio" name="payment_method" value="online" checked>
                            </label>
                        </tal:b>
                        <tal:b case="'free'">
                            <div class="field-display">
                                <div class="field-display-block">
                                    <div class="field-display-label" i18n:translate>Payment</div>
                                    <div class="field-display-data">
                                        <label class="common-text">
                                            <input type="radio" name="payment_method" value="online" checked>
                                            <span i18n:translate>Pay Online Now</span>
                                        </label>
                                        <label class="common-text">
                                            <input type="radio" name="payment_method" value="manual">
                                            <span i18n:translate>Pay Offline later</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </tal:b>

                        <div data-depends-on="payment_method/online">
                            <tal:b replace="structure checkout_button" />
                        </div>
                        <div data-depends-on="payment_method/manual">
                            <input type="submit" value="Complete" class="button" i18n:attributes="value">
                        </div>
                    </tal:b>

                    <tal:b condition="not price">
                        <input type="submit" value="Complete" class="button" i18n:attributes="value">
                    </tal:b>
                </form>
                <a href="${edit_link}" class="button secondary" i18n:translate="">Edit</a>
            </div>
        </div>
    </tal:block>
</div>
