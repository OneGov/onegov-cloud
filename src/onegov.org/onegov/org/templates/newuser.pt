<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row">
            <div class="small-12 medium-7 large-5 columns" tal:condition="not:password|False">
                <div metal:use-macro="layout.macros['form']" />
            </div>

            <div class="small-12 medium-9 large-7 columns" tal:condition="password|nothing">
                <p i18n:translate>
                    The user <em i18n:name="username">${username}</em> was created successfully.
                    Please write down the user's password, as it won't be shown to you again:
                </p>

                <div class="panel callout">
                    <div i18n:translate>Password:</div>
                    <strong>${password}</strong>
                </div>

                <a href="${request.link(layout.model)}" i18n:translate>Back to usermanagement</a>
            </div>
        </div>
    </tal:block>
</div>
