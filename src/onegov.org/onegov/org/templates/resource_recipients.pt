<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">

        <div class="panel" i18n:translate>
            The following recipients receive a daily e-mail sent at 06:00 containing the reservation data for all reservations of the day.
        </div>

        <p tal:condition="not:recipients" i18n:translate>No recipients defined yet.</p>

        <ul tal:condition="recipients" class="dense recipients">
            <li tal:repeat="recipient recipients" id="${recipient.id.hex}">
                <h2>${recipient.name}</h2>
                <div>
                    <a href="mailto:${recipient.address}">${recipient.address}</a>
                </div>
                <div>
                    <tal:block repeat="day recipient.send_on">
                        <tal:block switch="day">
                            <tal:block case="string:MO" i18n:translate>Mo</tal:block>
                            <tal:block case="string:TU" i18n:translate>Tu</tal:block>
                            <tal:block case="string:WE" i18n:translate>We</tal:block>
                            <tal:block case="string:TH" i18n:translate>Th</tal:block>
                            <tal:block case="string:FR" i18n:translate>Fr</tal:block>
                            <tal:block case="string:SA" i18n:translate>Sa</tal:block>
                            <tal:block case="string:SU" i18n:translate>Su</tal:block>
                        </tal:block>
                        <tal:block condition="not: repeat.day.end">, </tal:block>
                    </tal:block>
                </div>
                <div class="text-links">
                    <tal:block repeat="link recipient_links(recipient)" replace="structure link(request)" />
                </div>
            </li>
        </ul>
    </tal:block>
</div>
