<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row">
            <div class="small-12 medium-8 large-6 columns">
                <tal:b switch="hint">
                    <tal:b case="'owner'">
                        <div class="panel callout" i18n:translate>
                            You are editing a note created by someone else. By saving your changes
                            you will become the author of the whole note.
                        </div>
                    </tal:b>
                    <tal:b case="default">
                        <div class="panel" i18n:translate>
                            Notes are private and only shown to logged-in members. You can use
                            links/e-mail addresses are turned into clickable links.
                        </div>
                    </tal:b>
                </tal:b>

                <div metal:use-macro="layout.macros['form']" />
            </div>
        </div>
    </tal:block>
</div>
