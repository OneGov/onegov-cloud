<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="field-display">
            <div class="field-display-label" i18n:translate>Username</div>
            <div class="field-display-data">
                ${username}
            </div>
        </div>
        <div class="field-display">
            <div class="field-display-label" i18n:translate>Role</div>
            <div class="field-display-data">
                <tal:block metal:use-macro="layout.macros['role-singular']" />
            </div>
        </div>
        <div class="field-display">
            <div class="field-display-label" i18n:translate>Identicon</div>
            <div class="field-display-data">
                <div class="user-initials-large" style="background-color: ${layout.get_user_color(username)}">
                    ${initials}
                </div>
            </div>
        </div>
        <div class="field-display">
            <div class="field-display-label" i18n:translate>Password</div>
            <div class="field-display-data">
                <a href="./request-password" i18n:translate>Reset password</a>
            </div>
        </div>
        <div class="field-display userprofile-settings" tal:condition="role in ('admin', 'editor')">
            <div class="field-display-label" i18n:translate>Settings</div>
            <div class="field-display-data">
                <div class="row">
                    <div class="small-12 medium-6 columns">
                        <div metal:use-macro="layout.macros['form']" />
                    </div>
                </div>
            </div>
        </div>
    </tal:block>
</div>