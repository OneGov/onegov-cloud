<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">

        <div class="row">
            <div class="columns medium-8">
                <p tal:condition="not:entries" i18n:translate="">No entries found.</p>

                <ul class="with-lead" tal:condition="entries">
                    <li tal:repeat="entry entries">
                        <a class="list-title" tal:attributes="href request.link(entry)">${entry.title}</a><metal:hint use-macro="layout.macros['hidden-from-public-hint']" tal:define="item entry" />
                        <div class="list-lead">${entry.lead}</div>
                    </li>
                </ul>

                <div class="pagination-centered" tal:condition="entries">
                    <div metal:use-macro="layout.macros['pagination']" tal:define="
                    collection layout.model; current_page layout.model;" />
                </div>
            </div>

            <div class="columns medium-4 filter-panel">
                <div tal:repeat="filter filters" class="filter-periods">
                    <h2 class="filter-title">${filter.title}</h2>
                    <div metal:use-macro="layout.macros['tags']" tal:define="tags filter.tags" />
                </div>
            </div>
        </div>
    </tal:block>
</div>
