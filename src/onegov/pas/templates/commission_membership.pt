<div metal:use-macro="layout.base" i18n:domain="onegov.landsgemeinde">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>

    <tal:b metal:fill-slot="content">
        <dl class="field-display">
            <div>
                <dt i18n:translate>Commission</dt>
                <dd><div tal:content="commission_membership.commission.title"></div></dd>
            </div>
            <div>
                <dt i18n:translate>Parliamentarian</dt>
                <dd><div tal:content="commission_membership.parliamentarian.title"></div></dd>
            </div>
            <div>
                <dt i18n:translate>Position</dt>
                <dd><div tal:content="commission_membership.position_label"></div></dd>
            </div>
            <div tal:condition="commission_membership.start">
                <dt i18n:translate>Start</dt>
                <dd>${layout.format_date(commission_membership.start, 'date')}</dd>
            </div>
            <div tal:condition="commission_membership.end">
                <dt i18n:translate>End</dt>
                <dd>${layout.format_date(commission_membership.end, 'date')}</dd>
            </div>
        </dl>
    </tal:b>
</div>
