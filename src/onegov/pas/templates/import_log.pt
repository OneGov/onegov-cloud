
<div metal:use-macro="layout.base" i18n:domain="onegov.pas">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>

    <tal:b metal:fill-slot="content">
        <h2>${_('Import Details')}</h2>
        <p>
            <strong>${_('Timestamp')}:</strong> ${layout.format_date(log.created, 'datetime_long')} <br />
            <strong>${_('User')}:</strong> ${log.user.username if log.user else _('System')} <br />
            <strong>${_('Status')}:</strong> <span class="import-status ${log.status}" tal:content="log.status"></span>
        </p>

        <h3>${_('Summary')}</h3>
        <pre tal:content="details_formatted"></pre>

        <a href="${request.link(layout.model.__class__(request.session))}" class="button secondary">
            ${_('Back to Import History')}
        </a>
    </tal:b>
</div>
