<div metal:use-macro="layout.base" i18n:domain="onegov.pas">
    <tal:b metal:fill-slot="title">
            ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell main-content">
                <p tal:condition="not:attendences" i18n:translate="">No meeting defined yet.</p>
                <table tal:condition="attendences" class="attendences">
                    <thead>
                        <tr>
                            <th i18n:translate>Date</th>
                            <th i18n:translate>Duration</th>
                            <th i18n:translate>Parliamentarian</th>
                            <th i18n:translate>Type</th>
                            <th i18n:translate>Comission</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="attendence attendences">
                            <td><a href="${request.link(attendence)}" i18n:translate>${layout.format_date(attendence.date, 'date')}</a></td>
                            <td>${(attendence.duration/60)} h</td>
                            <td>${attendence.parliamentarian.title}</td>
                            <td>${attendence.type_label}</td>
                            <td><tal:block tal:condition="attendence.commission">${attendence.commission.title}</tal:block></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="medium-5 cell">
                <h3 i18n:translate>Bulk edits</h3>
                <ul class="more-list">
                    <li tal:repeat="group bulk_edit_groups">
                        <tal:b tal:define="attendence group[0]" tal:condition="attendence.bulk_edit_id">
                            <a class="list-link" href="${request.link(attendence, 'edit-bulk-attendences')}">
                                <i class="fa fa-edit"></i>
                                <span class="list-title" i18n:translate>${layout.format_date(attendence.date, 'date')}, ${attendence.type_label}</span>
                            </a>
                            <a href="${request.link(attendence, 'edit-bulk-attendences')}">
                                <p class="list-lead preview">
                                    <tal:b tal:condition="attendence.commission">
                                        ${attendence.commission.title}<br>
                                    </tal:b>
                                    ${len(group)} Anwesenheiten, ${attendence.duration/60} h<br>
                                        bearbeitet: ${layout.format_date(attendence.modified, 'datetime')}
                                </p>
                            </a>
                        </tal:b>
                    </li>
                </ul>
            </div>

        </div>

    </tal:b>
</div>
