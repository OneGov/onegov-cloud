<div metal:use-macro="layout.base" i18n:domain="onegov.pas">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell main-content">
                <p tal:condition="not:rate_sets" i18n:translate="">No rate sets defined yet.</p> <ul tal:condition="rate_sets" class="more-list rate-set-list">
                    <li tal:repeat="rate_set rate_sets">
                        <div class="list-link-container">
                          <a class="list-link" tal:attributes="href request.link(rate_set)">
                            <h5 class="list-title">${rate_set.year}</h5>
                          </a>
                            <a class="copy-icon" title="Copy this rate set" i18n:attributes="title" tal:attributes="href request.link(rate_set, 'copy-rate-set')"><i class="fas fa-copy"></i></a>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="large-4 medium-4 cell medium-offset-1 sidebar">
                <div class="sidebar-wrapper">
                    <div class="side-panel">
                        <h3 i18n:translate="">Filters</h3>
                        <div metal:use-macro="layout.macros['tags']" tal:define="tags filters['active']" />
                    </div>
                </div>
            </div>
        </div>

    </tal:b>
</div>
