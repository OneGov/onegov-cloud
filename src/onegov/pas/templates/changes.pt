<div metal:use-macro="layout.base" i18n:domain="onegov.pas">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell main-content">
                <p tal:condition="not:changes" i18n:translate="">No changes yet.</p>
                <table tal:condition="changes" class="changes">
                    <thead>
                        <tr>
                            <th i18n:translate>Timestamp</th>
                            <th i18n:translate>User</th>
                            <th i18n:translate>Action</th>
                            <th i18n:translate>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="change changes">
                            <td>${layout.format_date(change.last_change, 'datetime')}</td>
                            <td>${change.user}</td>
                            <td>${change.action_label}</td>
                            <td tal:define="attendence change.attendence;
                                            date change.date;
                                            parliamentarian change.parliamentarian;
                                            comission change.commission">
                                <a href="${request.link(change)}">
                                    <span tal:condition="date">${layout.format_date(date, 'date')}</span >
                                    <span tal:condition="parliamentarian">${parliamentarian.title}</span>
                                    <span tal:condition="comission">${comission.title}</span>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="large-4 medium-4 cell medium-offset-1 sidebar">
            </div>
        </div>

    </tal:b>
</div>
