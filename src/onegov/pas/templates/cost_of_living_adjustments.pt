<div metal:use-macro="layout.base" i18n:domain="onegov.pas">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell main-content">
                <p tal:condition="not:cost_of_living_adjustments" i18n:translate="">No cost of living adjustments defined yet.</p>
                <ul tal:condition="cost_of_living_adjustments" class="more-list cost-of-living-adjustment-list">
                    <li tal:repeat="cost_of_living_adjustment cost_of_living_adjustments">
                        <a class="list-link" tal:attributes="href request.link(cost_of_living_adjustment)">
                            <h5 class="list-title">${cost_of_living_adjustment.year}</h5>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="large-4 medium-4 cell medium-offset-1 sidebar">
                <div class="sidebar-wrapper">
                    <div class="side-panel">
                        <h3 i18n:translate="">Filters</h3>
                        <div metal:use-macro="layout.macros['tags']" tal:define="tags filters['active']" />
                    </div>
                </div>
            </div>
        </div>

    </tal:b>
</div>
