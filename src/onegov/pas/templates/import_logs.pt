<div metal:use-macro="layout.base" i18n:domain="onegov.pas">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>

    <tal:b metal:fill-slot="content">
        <div class="row" tal:condition="kub_token_configured">
            <div class="small-12 columns">
                <form method="POST" action="${request.link(context, 'trigger-import')}" style="display: inline;">
                    <button type="submit" class="button alert" onclick="return confirm('Are you sure you want to trigger a manual import?');" i18n:translate="">
                        Trigger Manual Import
                    </button>
                </form>
            </div>
        </div>

        <table class="inline-table">
            <thead>
                <tr>
                    <th i18n:translate="">Timestamp</th>
                    <th i18n:translate="">User</th>
                    <th i18n:translate="">Type</th>
                    <th i18n:translate="">Status</th>
                    <th i18n:translate="">Details</th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="log logs">
                    <td>${layout.format_date(log.created, 'datetime_long')}</td>
                    <td>${log.user.username if log.user else request.translate('System')}</td>
                    <td>${translate_import_type(log.import_type)}</td>
                    <td>
                        <span class="import-status ${log.status}" tal:content="log.status"></span>
                    </td>
                    <td>
                        <a href="${request.link(log)}" i18n:translate="">View Details</a>
                    </td>
                </tr>
                <tr tal:condition="not logs">
                    <td colspan="5" i18n:translate="">No import logs found.</td>
                </tr>
            </tbody>
        </table>
    </tal:b>
</div>

