<div metal:use-macro="layout.base" i18n:domain="onegov.pas">
    <tal:b metal:fill-slot="title">
            ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x">
            <div class="small-12 cell">
                <h2 i18n:translate="">Upload</h2>
                <tal:b metal:use-macro="layout.macros.upload">
                    <tal:b metal:fill-slot="upload-filelist">
                        <div class="upload-filelist-header" style="display: none;">
                            <h2 i18n:translate>Just Uploaded</h2>

                            <table class="files">
                                <tr>
                                    <th i18n:translate>
                                        Name
                                    </th>
                                    <th>
                                    </th>
                                    <th i18n:translate>
                                        Extension
                                    </th>
                                    <th i18n:translate>
                                        Upload Date
                                    </th>
                                </tr>

                                <tbody class="upload-filelist"></tbody>
                                        </table>
                        </div>
                    </tal:b>
                </tal:b>
            </div>
        </div>

        <div class="columns small-12 medium-8">
            <div metal:use-macro="layout.macros['form']"/>
        </div>
        <div class="columns small-12 medium-4">
            <div class="panel">
                <p i18n:translate>
                    Your statement is required to be in "ISO-20022 format
                </p>
            </div>
        </div>

    </tal:b>
</div>
