<div metal:use-macro="layout.base" i18n:domain="onegov.landsgemeinde">
    <tal:b metal:fill-slot="title">
        ${layout.agenda_item_title(agenda_item)}
    </tal:b>
    <tal:b metal:fill-slot="main-title">
        <tal:block metal:use-macro="layout.macros['agenda-item-title']" />
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell">

                <p tal:condition="agenda_item.start" class="subheader">${layout.format_date(agenda_item.start, 'datetime')}</p>

                <div class="callout secondary" tal:condition="agenda_item.resolution or agenda_item.tacitly_accepted">
                    <tal:block tal:content="structure agenda_item.resolution">
                    <p tal:condition="agenda_item.tacitly_accepted" i18n:translate="">Tacitly accepted</p>
                </div>

                <tal:block tal:condition="agenda_item.overview" tal:content="structure agenda_item.overview"></tal:block>
                <hr>

                <div tal:condition="agenda_item.text" tal:content="structure agenda_item.text"></div>
                <div tal:repeat="votum agenda_item.vota" class="vota">
                    <tal:block metal:use-macro="layout.macros['votum']" />
                </div>

                <span tal:repeat="tag agenda_item.resolution_tags" class="blank-label">${tag}</span>

            </div>

            <div class="large-4 medium-4 cell medium-offset-1 sidebar">
                <div class="side-panel downloads" tal:condition="agenda_item.memorial_pdf">

                    <tal:block tal:condition="agenda_item.memorial_pdf">
                        <h2 i18n:translate="">Downloads</h2>
                        <p tal:condition="agenda_item.memorial_pdf">
                            <a href="${request.link(agenda_item.memorial_pdf)}" class="memorial-link">
                                <i class="fa fa-download" aria-hidden="true"></i>
                                <span i18n:translate="">Excerpt from the Memorial (PDF)</span>
                            </a>
                        </p>
                    </tal:block>

                </div>
            </div>
        </div>

    </tal:b>
</div>
