<div metal:use-macro="layout.base" i18n:domain="onegov.landsgemeinde">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell">
                <p tal:condition="not:vota" i18n:translate="">No vota defined yet.</p>
                <ul tal:condition="vota" class="more-list vota-list">
                    <li tal:repeat="votum vota">
                        <a class="list-link" tal:attributes="href request.link(votum)">
                            <h5 class="list-title">${layout.votum_title(votum)}</h5>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="large-4 medium-4 cell medium-offset-1 sidebar">
            </div>
        </div>

    </tal:b>
</div>
