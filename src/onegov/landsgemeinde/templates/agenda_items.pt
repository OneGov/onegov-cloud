<div metal:use-macro="layout.base" i18n:domain="onegov.landsgemeinde">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell">
                <p tal:condition="not:agenda_items" i18n:translate="">No agenda items defined yet.</p>
                <ul tal:condition="agenda_items" class="more-list agenda-item-list">
                    <li tal:repeat="agenda_item agenda_items">
                        <a class="list-link" tal:attributes="href request.link(agenda_item)">
                            <h5 class="list-title"><tal:block metal:use-macro="layout.macros['agenda-item-title']" /></h5>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="large-4 medium-4 cell medium-offset-1 sidebar">
            </div>
        </div>

    </tal:b>
</div>
