<div metal:use-macro="layout.base" i18n:domain="onegov.election_day">
    <tal:block metal:fill-slot="title">
        ${title} - ${request.app.principal.name}
    </tal:block>
    <tal:block metal:fill-slot="body">
        <h1>${title}</h1>
        <p i18n:translate>Please confirm your unsubscription. Click on the link below.</p>
        <p><a href="${optout}" i18n:translate>Confirm unsubscription</a></p>
        <p i18n:translate>You can ignore this email if you have not unsubscribed from the email notifications.</p>
    </tal:block>
    <tal:block metal:fill-slot="footer">
        <p><a href="${optout}" i18n:translate>Unsubscribe</a></p>
    </tal:block>
</div>
