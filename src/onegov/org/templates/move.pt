<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row">
            <div class="columns medium-12">
                <div class="callout panel">
                    <p i18n:translate="">Move the items using drag and drop. The new positions are automatically saved directly after moving.</p>
                </div>
                <p> Select parent of topic '${page.title}'</p>
                <ul class="sort-items">
                    <li>
                        ${root.title}
                    </li>
                </ul>
                <span tal:define="children python:root.children">
                    <ul class="sort-items sort-tree" metal:define-macro="child_list" tal:repeat="child children" data-sortable data-sortable-url="${layout.sortable_url_template}">
                        <li>
                            ${child.title}
                        </li>
                        <span tal:define="children child.children">
                            <div metal:use-macro="template.macros['child_list']" />
                        </span>
                    </ul>
                </span>
                <a href="${request.link(page)}" class="button" i18n:translate="">Back to page</a>
            </div>
        </div>
    </tal:block>
</div>
