<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="panel callout" i18n:translate>
            Removes all unreserved allocations between the start and end date. This includes allocations that were created by using an availability period. To recreate these allocations, click on "edit" in the availability period and then "save" without changing anything.
        </div>
        <div class="row">
            <div class="small-12 medium-8 large-6 columns">
                <div metal:use-macro="layout.macros['form']" />
            </div>
        </div>
    </tal:b>
</div>