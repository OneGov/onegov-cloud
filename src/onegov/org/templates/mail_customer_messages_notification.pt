<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="body">
        <p i18n:translate>Hello!</p>
        <p i18n:translate>
            New customer message in Ticket <a href="${request.link(model)}" i18n:name="link">${ticket_reference}:</a>
        </p>

        <tal:b repeat="previous thread">
            <table class="inline-message previous-message" bgcolor="#f5f5f5"><tr><td>
                <span class="message-owner" i18n:translate tal:condition="repeat.previous.index in (0, 1)">
                    <a href="mailto:${previous.owner}" i18n:name="author">${previous.owner}</a> wrote
                </span>

                <tal:b content="previous.formatted_text(layout)" />
            </td></tr></table>
            <br tal:condition="repeat.previous.index == 0">
        </tal:b>

        <table class="inline-message current-message" bgcolor="#f5f5f5"><tr><td>
            <span class="message-owner" i18n:translate tal:condition="len(thread) <= 1">
                <a href="mailto:${message.owner}" i18n:name="author">${message.owner}</a> wrote
            </span>

            <tal:b content="message.formatted_text(layout)" />
        </td></tr></table>

        <p i18n:translate>
            Please <a href="${request.link(model)}" i18n:name="link" i18n:translate>visit the request page</a> to reply.
        </p>

        <p i18n:translate>Have a great day!</p>
    </tal:b>
    <tal:b metal:fill-slot="above-footer">
        <p>
            <span i18n:translate>
                This is the notification for customer messages on reservations for ${request.app.org.title}. If you no longer want to receive this e-mail please contact an administrator so they can remove you from the recipients list.
            </span>
    </tal:b>

</div>