<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="body">
        <p i18n:translate>Hello!</p>

        <p><tal:b i18n:translate>You are recieving this mail because you subscribed to getting notifications on new entries in the following directory:</tal:b><br/>
        <a href="${request.link(directory)}">${directory.title}</a></p>

        <p i18n:translate>Plese click the following link to confirm your subscription:</p>
        <p><a class="btn-primary" href="${request.link(subscription, 'confirm')}" i18n:translate>Confirm subscription</a></p>

        <p i18n:translate>If you did not subscribe to this notifications you can simply ignore this e-mail.</p>

        <tal:b metal:fill-slot="above-footer">
            <p i18n:translate>
                Do you no longer wish to receive these notifications?
            </p>
            <p>
                <a href="${unsubscribe}" i18n:translate>Click here to unsubscribe.</a>
            </p>
        </tal:b>

    </tal:b>
</div>
