<div metal:use-macro="layout.base" i18n:domain="onegov.fsi">
    <tal:b metal:fill-slot="title">
        ${layout.title}
    </tal:b>
    <tal:b metal:fill-slot="content">

<!-- You can also use data-content instead of href to point to the content of the accordion -->

        <div class="row">
            <div class="columns small-12">
                <div class="row">
                    <div class="columns small-12">
                        <tal:b metal:use-macro="layout.macros['accordion']" />
                        <strong tal:condition="not: notifications">There are no templates set for this course event</strong>
                        <tal:b tal:condition="notifications|nothing">
                            <table>
                                <thead>
                                    <th i18n:translate="">Mail Subject</th>
                                    <th i18n:translate="">Mail Type</th>
                                </thead>
                                <tbody>
                                    <tal:b tal:repeat="notification notifications">
                                        <tr>${notification.subject}</tr>
                                        <tr>${layout.format_notification_type(notification.type)}</tr>
                                        <tr></tr>
                                    </tal:b>
                                </tbody>
                            </table>
                        </tal:b>
                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>