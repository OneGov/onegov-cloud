<div metal:use-macro="layout.base" i18n:domain="onegov.fsi">
    <tal:b metal:fill-slot="title">
        ${model.name}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="row">
            <div class="columns small-12">
                <div class="row">
                    <div class="columns small-12">
                        <tal:b tal:condition="model|nothing">

                            <p tal:condition="request.is_manager and model.hidden_from_public">This course is hidden.</p>

                            <p><strong i18n:translate="">Info: </strong> ${layout.format_date(model.start, 'date')} ${layout.format_date(model.start, 'time')} - ${layout.format_date(model.end, 'time')}</p>
                            <p><strong i18n:translate="">Attendees: </strong> min. ${model.min_attendees} max. ${model.max_attendees}</p>
                            <p><strong i18n:translate="">Reservations: </strong>${model.reservations.count()}</p>
                            <p><strong i18n:translate="">Remaining seats: </strong> ${model.available_seats}</p>
                            <p><strong i18n:translate="">Description:</strong></p>
                            <p tal:content="structure model.description_html"></p>
                            <tal:b tal:condition="request.is_logged_in" tal:define="registered model.has_reservation(request.attendee_id)">
                                <tal:b tal:switch="registered">
                                    <button tal:case="True" class="button success" i18n:translate="">Registered</button>
                                    <metal:b tal:case="False" tal:condition="model.bookable" use-macro="layout.macros['intercooler_btn']"/>
                                </tal:b>

                                <p><strong tal:condition="not: model.bookable" i18n:translate="">This course event can't be booked anymore.</strong></p>
                            </tal:b>
                        </tal:b>
                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>