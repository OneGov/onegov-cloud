<div metal:use-macro="layout.base" i18n:domain="onegov.fsi">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="row">
            <div class="columns small-12">
                <div class="row">
                    <div class="columns small-12">
                        <strong tal:condition="not: courses" i18n:translate="">No entries found</strong>
                        <tal:b tal:condition="courses">
                            <table class="tablesaw">
                                <thead>
                                    <th i18n:translate="">Name</th>
                                    <th i18n:translate="">Presenter</th>
                                    <th i18n:translate="">Presenter Company</th>
                                    <th i18n:translate="">Refresh</th>
                                    <th i18n:translate="">Next Events</th>
                                </thead>
                                <tbody>
                                    <tal:b tal:repeat="course courses">
                                        <tr>
                                            <td class="">${course.name}</td>
                                            <td class="">${course.presenter_name}</td>
                                            <td class="">${course.presenter_company}</td>
                                            <td class="" tal:condition="course.mandatory_refresh">${course.mandatory_refresh}</td>
                                            <td class="" tal:condition="not course.mandatory_refresh" i18n:translate="">None</td>
                                            <td class="">${layout.events_link(course)}}</td>
                                        </tr>
                                    </tal:b>
                                </tbody>

                            </table>
                        </tal:b>

                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>