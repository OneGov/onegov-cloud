<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>

    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="large-7 medium-8 cell main-content">
                <div tal:condition="parliamentary_group.roles">
                    <h6 i18n:translate>Parliamentarians</h6>
                    <ul class="more-list">
                        <li tal:repeat="role active_roles">
                            <a href="${request.link(role.parliamentarian)}" class="list-link">
                                <span class="list-title">${role.parliamentarian.title}</span>
                            </a>
                            <span class="list-lead preview">
                                ${role.parliamentary_group_role_label}
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="large-4 medium-4 cell sidebar filter-panel">
                <div class="sidebar-wrapper">
                    <div class="side-panel">
                        <div tal:condition="parliamentary_group.description">
                            <h3 i18n:translate>Description</h3>
                            <div tal:content="parliamentary_group.description"></div>
                        </div>
                        <div tal:condition="parliamentary_group.start">
                            <h6 i18n:translate>Start</h6>
                            <span>${layout.format_date(parliamentary_group.start, 'date')}</span>
                        </div>
                        <p>
                        <div tal:condition="parliamentary_group.end">
                            <h6 i18n:translate>End</h6>
                            <span>${layout.format_date(parliamentary_group.end, 'date')}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>
