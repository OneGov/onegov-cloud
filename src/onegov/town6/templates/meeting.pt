<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>


    <tal:b metal:fill-slot="content">
        <tal:b metal:use-macro="layout.macros.page_content" />
    </tal:b>
    <tal:b metal:fill-slot="after-text">
                        <h2 i18n:translate="">Location</h2>
                <div tal:content="page.address"></div>
                <h2 tal:condition="page.description" i18n:translate="">Description</h2>
                <div tal:content="page.description"></div>
                <h2 i18n:translate="">Agenda</h2>
    </tal:b>
</div>
