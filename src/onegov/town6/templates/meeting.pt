<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-7 cell main-content">
                <h2 i18n:translate="">Location</h2>
                <div tal:content="meeting.address"></div>
                <h2 tal:condition="meeting.description" i18n:translate="">Description</h2>
                <div tal:content="meeting.description"></div>
                <h2 i18n:translate="">Agenda</h2>
            </div>
        </div>
    </tal:b>
</div>
