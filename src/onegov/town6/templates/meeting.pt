<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>

    <tal:b metal:fill-slot="content">
        <tal:b metal:use-macro="layout.macros.page_content" />
    </tal:b>
    <div metal:fill-slot="after-lead">
        <p>
            <strong>
                <span tal:condition="page.start_datetime">${layout.format_date(page.start_datetime, 'datetime')}</span>
                <span tal:condition="page.end_datetime"> - ${layout.format_date(page.end_datetime, 'datetime')}</span>
            </strong>
        </p>

    </div>
    <tal:b metal:fill-slot="after-text">
        <h2 i18n:translate="">Location</h2>
        <div tal:content="page.address"></div>
        <h2 tal:condition="page.description" i18n:translate="">Description</h2>
        <div tal:content="page.description"></div>
        <h2 i18n:translate="">Agenda</h2>

        <ul tal:condition="meeting_items_with_links" class="meeting-items">
            <li tal:repeat="item meeting_items_with_links">
                <span tal:condition="item.number"
                      tal:content="string:${item.number}. " />
                <a tal:condition="item.political_business_link"
                   tal:attributes="href item.political_business_link"
                   tal:content="item.title" />
                <span tal:condition="not: item.political_business_link"
                      tal:content="item.title" />
            </li>
        </ul>
    </tal:b>

</div>

