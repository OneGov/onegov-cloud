<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">

        <div class="grid-x wrapper">

            <div class="cell small-12 medium-7 content">
                <div tal:condition="header_html|nothing" class="resource-header">
                    <ul class="accordion" data-accordion data-allow-all-closed="true">
                        <li class="accordion-item" data-accordion-item>
                            <a href="#" style="display: flex; align-items: center;">
                                <tal:b i18n:translate>General information about resources</tal:b>
                                <i class="fas fa-plus" style="margin-left: auto"></i>
                            </a>
                            <div class="accordion-content" data-tab-content>
                                ${header_html}
                            </div>
                        </li>
                    </ul>
                </div>

                <p tal:condition="not:resources" i18n:translate="">No reservation resources defined yet.</p>
                <div tal:condition="resources" metal:use-macro="layout.macros['resource_groups']" tal:define="add_pagerefs request.is_logged_in" />

                <div tal:condition="footer_html|nothing" class="resource-footer">
                    <ul class="accordion" data-accordion data-allow-all-closed="true">
                        <li class="accordion-item" data-accordion-item>
                            <a href="#" style="display: flex; align-items: center;">
                                <tal:b i18n:translate>General information about resources</tal:b>
                                <i class="fas fa-plus" style="margin-left: auto"></i>
                            </a>
                            <div class="accordion-content" data-tab-content>
                                ${footer_html}
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="cell small-12 medium-4 medium-offset-1 sidebar">
                <div class="sidebar-wrapper">
                    <div class="side-panel">
                        <h3 i18n:translate="">Categories</h3>
                        <ul class="more-list">
                            <li tal:repeat="resource resources">
                                <a class="list-link list-title" href="#${resource.title}">${resource.title}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>
