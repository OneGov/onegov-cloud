<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="large-7 medium-8 cell main-content subpage-cards political-businesses">
                <p tal:condition="not: businesses" i18n:translate="">No political businesses defined yet.</p>

                <a tal:attributes="href request.link(business)" tal:repeat="business businesses">
                    <div class="card">
                        <div class="card-header">
                            <div class="info">
                                <span>${layout.format_date(business.entry_date, 'date')}</span>
                                <b tal:condition="business.number">${business.number}</b>
                            </div>
                            <div class="tags">
                                <span tal:condition="python: business.political_business_type in type_map" class="blank-label">${type_map[business.political_business_type]}</span>
                                <span tal:condition="python: business.status in status_map" class="blank-label">${status_map[business.status]}</span>
                            </div>
                        </div>
                        <div class="card-section">
                            <h3 class="h5 title">${business.title}</h3>
                        </div>
                    </div>
                </a>
                <div tal:condition="businesses" class="pagination-centered">
                    <div metal:use-macro="layout.macros['pagination']" tal:define="collection layout.model; current_page layout.model; pagination_centered True" />
                </div>
            </div>

            <div class="large-4 medium-4 large-offset-1 cell sidebar filter-panel">
                <div class="sidebar-wrapper">
                    <div tal:condition="business_types" class="side-panel filter-business-types">
                        <h2 class="h3" i18n:translate>Business Type</h2>
                        <div metal:use-macro="layout.macros['tags']" tal:define="tags business_types" />
                    </div>
                    <div tal:condition="business_status" class="side-panel filter-business-status">
                        <h2 class="h3" i18n:translate>Status</h2>
                        <div metal:use-macro="layout.macros['tags']" tal:define="tags business_status" />
                    </div>
                    <div tal:condition="years" class="side-panel filter-business-years">
                        <h2 class="h3" i18n:translate>Year</h2>
                        <div metal:use-macro="layout.macros['tags']" tal:define="tags years" />
                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>
