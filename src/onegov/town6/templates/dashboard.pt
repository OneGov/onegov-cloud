<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="boardlet-group grid-x grid-padding-x columns small-up-1 medium-up-2 large-up-3 align-center" tal:repeat="group model.boardlets()">
            <div class=" cell" tal:repeat="boardlet group">
                <div class="boardlet boardlet-${boardlet.state}">
                    <h2 class="h4"><span>${boardlet.number|''}</span><br tal:condition="boardlet.number|False"><span class="title">${boardlet.title}</span></h2>
                    <ul class="dense">
                        <li tal:repeat="fact boardlet.facts" class="${fact.css_class} small">
                            <span class="fact-text">${fact.text}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>        
    </tal:b>
</div>
