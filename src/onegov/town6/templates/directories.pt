<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <tal:b metal:use-macro="layout.macros.page_content"
                 tal:define="lead None; text None; people None; coordinates None; contact layout.org.meta.get('contact_html')">
            <tal:b metal:fill-slot="after-text">
                <p tal:condition="not:directories" i18n:translate="">No directories defined yet.</p>
                <ul tal:condition="directories" class="forms-list">
                    <li tal:repeat="directory directories">
                        <a class="list-title h5-size" tal:attributes="href link(directory)">${directory.title}</a>
                        <metal:hint use-macro="layout.macros['access_hint']" tal:define="item directory" />
                        <div class="list-lead">${directory.lead}</div>
                    </li>
                </ul>
            </tal:b>
        </tal:b>

    </tal:b>
</div>
