<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">

            <ul class="subscribers">
                <li tal:repeat="recipient recipients">
                    <span>
                        ${recipient.address}
                    </span>
                    -
                    <a class="confirm"
                       href="#" i18n:translate="">
                        unsubscribe
                    </a>
                </li>
            </ul>
    </tal:b>
</div>
