<tal:b i18n:domain="onegov.town6">
    <metal:b use-macro="layout.macros['generic_message']">
        <metal:b fill-slot="title">
            <a href="${link}">${model.channel_id}</a> - ${model.meta.group}
        </metal:b>
        <metal:b fill-slot="text">
            <tal:b tal:switch="model.meta.change" tal:define="count len(model.meta['reservations'])">
                <tal:b tal:case="'accepted'">
                    <tal:b tal:condition="count == 1" i18n:translate>
                        1 reservation accepted.
                    </tal:b>
                    <tal:b tal:condition="count > 1" i18n:translate>
                        <tal:b i18n:name="count">${count}</tal:b> reservations accepted.
                    </tal:b>
                </tal:b>
                <tal:b tal:case="'rejected'">
                    <tal:b tal:condition="count == 1" i18n:translate>
                        1 reservation rejected.
                    </tal:b>
                    <tal:b tal:condition="count > 1" i18n:translate>
                        <tal:b i18n:name="count">${count}</tal:b> reservations rejected.
                    </tal:b>
                </tal:b>
                <tal:b tal:case="'added'">
                    <tal:b tal:condition="count == 1" i18n:translate>
                        1 reservation added.
                    </tal:b>
                    <tal:b tal:condition="count > 1" i18n:translate>
                        <tal:b i18n:name="count">${count}</tal:b> reservations added.
                    </tal:b>
                </tal:b>
            </tal:b>
        </metal:b>
    </metal:b>
</tal:b>
