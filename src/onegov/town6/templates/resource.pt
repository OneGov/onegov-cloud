<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">

        <div tal:condition="resource.group" class="resource-group blank-label">${resource.group}</div>

        <tal:b tal:define="item resource|nothing">
            <metal:hint use-macro="layout.macros['access_hint_long']" />
            <metal:hint use-macro="layout.macros['empty_page_lead_hint']" />
        </tal:b>

        <tal:b metal:use-macro="layout.macros.page_content"
             tal:define="lead layout.linkify(resource.meta.get('lead'));text None; people None; contact None; coordinates None; files None;" />

        <div class="calendar"
            data-feed="${feed}"
            data-reservations="${request.link(resource, name='reservations')}"
            data-reservationform="${request.link(resource, name='form')}"
            data-type="${resource.type}"
            data-editable="${request.is_manager and 'true' or 'false'}"
            data-select-url="${request.link(resource, name='new-rule')}"
            data-view="${resource.view or resource.default_view or 'timeGridWeek'}"
            data-date="${resource.date and resource.date.isoformat() or ''}"
            data-highlights-min="${resource.highlights_min or ''}"
            data-highlights-max="${resource.highlights_max or ''}"
            data-resources-url="${resources_url}"
            data-resource-active="${resource.name}"
        ></div>
        <div class="calendar-footer" tal:condition="resource.deadline and not resource.lead_time">
            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
            <span i18n:translate>
                Reservations must be made at least <tal:b i18n:name="n">${resource.deadline[0]}</tal:b> <tal:b i18n:name="unit">
                    <tal:b tal:condition="resource.deadline[1] == 'd'">
                        <tal:b tal:condition="resource.deadline[0] == 1" i18n:translate>day</tal:b>
                        <tal:b tal:condition="resource.deadline[0] != 1" i18n:translate>days</tal:b>
                    </tal:b>
                    <tal:b tal:condition="resource.deadline[1] == 'h'">
                        <tal:b tal:condition="resource.deadline[0] == 1" i18n:translate>hour</tal:b>
                        <tal:b tal:condition="resource.deadline[0] != 1" i18n:translate>hours</tal:b>
                    </tal:b>
                </tal:b> in advance.
            </span>
        </div>
        <div class="calendar-footer" tal:condition="not resource.deadline and resource.lead_time">
            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
            <span i18n:translate>
                Reservations can only be made at most <tal:b i18n:name="n">${resource.lead_time}</tal:b> <tal:b i18n:name="unit">
                    <tal:b tal:condition="resource.lead_time == 1" i18n:translate>day</tal:b>
                    <tal:b tal:condition="resource.lead_time != 1" i18n:translate>days</tal:b>
                </tal:b> in advance.
            </span>
        </div>
        <div class="calendar-footer" tal:condition="resource.deadline and resource.lead_time">
            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
            <span i18n:translate>
                Reservations must be made at least <tal:b i18n:name="n1">${resource.deadline[0]}</tal:b> <tal:b i18n:name="unit1">
                    <tal:b tal:condition="resource.deadline[1] == 'd'">
                        <tal:b tal:condition="resource.deadline[0] == 1" i18n:translate>day</tal:b>
                        <tal:b tal:condition="resource.deadline[0] != 1" i18n:translate>days</tal:b>
                    </tal:b>
                    <tal:b tal:condition="resource.deadline[1] == 'h'">
                        <tal:b tal:condition="resource.deadline[0] == 1" i18n:translate>hour</tal:b>
                        <tal:b tal:condition="resource.deadline[0] != 1" i18n:translate>hours</tal:b>
                    </tal:b>
                </tal:b> and at most <tal:b i18n:name="n2">${resource.lead_time}</tal:b> <tal:b i18n:name="unit2">
                    <tal:b tal:condition="resource.lead_time == 1" i18n:translate>day</tal:b>
                    <tal:b tal:condition="resource.lead_time != 1" i18n:translate>days</tal:b>
                </tal:b> in advance.
            </span>
        </div>
        <div class="panel" tal:condition="request.is_manager">
            <span i18n:translate>Select a free time span in the calendar to create an availability period.</span>
        </div>

        <tal:b
            define="
                lead None;
                text resource.text|None;
                people resource.people;
                contact resource.contact_html;
                coordinates resource.coordinates;
            "
            condition="text or people or contact">
            <h2 i18n:translate>Further Information</h2>
            <tal:b metal:use-macro="layout.macros.page_content" />
        </tal:b>

    </tal:b>
</div>
