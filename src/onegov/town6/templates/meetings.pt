<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x">
            <div class="medium-6 cell main-content">
                <p tal:condition="not:meetings" i18n:translate="">No meetings defined yet.</p>

                <p tal:condition="upcoming_meeting|None">
                    <h4 i18n:translate>Next Meeting</h4>
                    <ul class="more-list meeting-list">
                        <li>
                            <a class="list-link" tal:attributes="href request.link(upcoming_meeting)">
                            <span class="h5 list-title">
                                ${upcoming_meeting.title}
                            </span>
                            </a>
                            <a tal:attributes="href request.link(upcoming_meeting)">
                                <p class="list-lead preview">
                                    <span>${layout.format_date(upcoming_meeting.start_datetime, 'datetime')}</span>
                                </p>
                            </a>
                        </li>
                    </ul>
                </p>

                <h4 tal:condition="not: past_title" i18n:translate style="padding-top: 1rem">Future Meetings</h4>
                <h4 tal:condition="past_title" i18n:translate style="padding-top: 1rem">Past Meetings</h4>
                <ul tal:condition="meetings" class="more-list meeting-list">
                    <li tal:repeat="meeting meetings">
                        <a class="list-link" tal:attributes="href request.link(meeting)">
                            <span class="h5 list-title">
                                ${meeting.title}
                            </span>
                        </a>
                        <a tal:attributes="href request.link(meeting)">
                            <p class="list-lead preview">
                                <span>${layout.format_date(meeting.start_datetime, 'datetime')}</span>
                            </p>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="large-4 medium-4 cell medium-offset-1 sidebar">
                <div class="sidebar-wrapper">
                    <div class="side-panel">
                        <h3 i18n:translate="">Filters</h3>
                        <div metal:use-macro="layout.macros['tags']" tal:define="tags filters['past']" />
                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>
