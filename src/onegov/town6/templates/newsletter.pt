<div metal:use-macro="layout.base" i18n:domain="onegov.town6">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <p tal:condition="lead" class="newsletter-lead h5" tal:content="structure lead" />

        <div class="newsletter-block">
            <tal:b condition="news">
                <p tal:condition="not: secret_content_allowed|nothing and secret_news|nothing">
                    <i class="fa fa-exclamation-triangle" style="color: #cca000;" aria-hidden="true" title="Warning secret content"></i>
                    <span i18n:translate="">You selected 'secret' content for your newsletter. Secret content will not be visible unless you enable it in <a href=${link_newsletter_settings} i18n:translate="">Newsletter Settings</a>.</span>
                </p>
                <p tal:condition="private_news|nothing">
                    <i class="fa fa-exclamation-triangle" style="color: #cca000;" aria-hidden="true" title="Warning private content"></i>
                    <span i18n:translate="">You selected 'private' content for your newsletter. Private content cannot be part of a newsletter.</span>
                </p>
                <metal:newslist use-macro="layout.macros['newslist']" />
            </tal:b>
        </div>

        <div class="newsletter-block newsletter-publications-block">
            <tal:b condition="publications">
                <h2 i18n:translate>Publications</h2>
                <ul tal:repeat="publication publications" class="dense">
                    <li>
                        <metal:newslist use-macro="layout.macros['publication']" />
                    </li>
                </ul>
            </tal:b>
        </div>

        <div class="newsletter-block">
            <tal:b condition="occurrences">
                <h2 i18n:translate>Events</h2>
                <div class="grid-x">
                    <div class="cell small-12 medium-8 end">
                        <metal:occurrences use-macro="layout.macros['occurrences']" />
                    </div>
                </div>
            </tal:b>
        </div>
    </tal:b>
</div>
