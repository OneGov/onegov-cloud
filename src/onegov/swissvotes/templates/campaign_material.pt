<div metal:use-macro="layout.base" i18n:domain="onegov.swissvotes" tal:define="vote layout.model">
    <tal:block metal:fill-slot="title">
        ${layout.title}
        <small tal:condition="vote.keyword">${vote.keyword}</small>
    </tal:block>
    <tal:block metal:fill-slot="content">
        <h2 i18n:translate>${layout.title}</h2>
        <table class="sortable campaign-material">
            <thead>
                <tr>
                    <th i18n:translate>Document title</th>
                    <th i18n:translate>Position towards the vote</th>
                    <th i18n:translate>Author</th>
                    <th i18n:translate>Edited by</th>
                    <th i18n:translate>Date of publication</th>
                    <th i18n:translate>Language</th>
                    <th i18n:translate>Type of document</th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="file vote.campaign_material_other">
                    <tal:block tal:define="metadata vote.campaign_material_metadata.get(file.filename.replace('.pdf', ''), {})">
                        <tal:block tal:condition="metadata">
                            <td>
                                <a href="${request.link(file)}" target="_blank" >${metadata.get('title') or file.filename}</a>
                            </td>
                            <td tal:define="value metadata.get('position')" i18n:translate>${codes['position'].get(value, value)}</td>
                            <td>${metadata.get('author')}</td>
                            <td>${metadata.get('editor')}</td>
                            <td>${metadata.get('')}</td>
                            <td>
                                <span tal:repeat="value metadata.get('language')" i18n:translate>${codes['language'].get(value, value)}</span>
                            </td>
                            <td>
                                <span tal:repeat="value metadata.get('doctype')" i18n:translate>${codes['doctype'].get(value, value)}</span>
                            </td>
                        </tal:block>
                        <tal:block tal:condition="not: metadata">
                            <td colspan="7">
                                <a href="${request.link(file)}" target="_blank" >${file.filename}</a>
                            </td>
                        </tal:block>
                    </tal:block>
                </tr>
            </tbody>
        </table>
    </tal:block>
</div>
