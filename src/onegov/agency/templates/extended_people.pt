<div metal:use-macro="layout.base" i18n:domain="onegov.agency">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="grid-x grid-padding-x reverse-on-mobile">
            <div class="cell medium-7">
                <p tal:condition="not:people" i18n:translate="">No people found.</p>

                <div tal:condition="people" class="people-list">
                    <div metal:use-macro="layout.macros['atoz']" tal:define="items people">
                        <tal:block metal:fill-slot="item-detail">
                            <tal:bl metal:use-macro="layout.macros['person_list_card']" tal:define="person detail"/>
                        </tal:block>
                    </div>
                </div>

                <div metal:use-macro="layout.macros['pagination']" tal:define="collection layout.model; current_page layout.model; pagination_centered True" />
            </div>

            <div class="cell medium-4 medium-offset-1 sidebar filter-panel">
                <div class="sidebar-wrapper">
                    <div class="side-panel">
                        <h3 class="filter-title" i18n:translate>Letter</h3>
                        <div class="filter-panel">
                            <ul class="tags">
                                <li tal:repeat="letter letters">
                                    <span class="blank-label click-through rounded ${letter.active and 'active' or ''}" tal:content="letter(layout)">
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="side-panel">
                        <h3 class="filter-title" i18n:translate>Agency</h3>
                        <select class="people-select chosen-select">
                            <tal:block tal:repeat="agency agencies">
                                <option value="${agency.value}" tal:attributes="selected agency.selected">${agency.title}</option>
                            </tal:block>
                        </select>
                    </div>

                    <div tal:condition="request.is_manager and people_xlsx_link|nothing" class="side-panel">
                        <h3 i18n:translate>Exports</h3>
                        <ul class="more-list">
                            <li>
                                <a class="list-link" href="${people_xlsx_link}" target="_blank">
                                    <i class="far fa-file-excel" aria-hidden="true"></i>
                                    <span i18n:translate class="list-title">Excel-Download Persons</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </tal:block>
</div>
