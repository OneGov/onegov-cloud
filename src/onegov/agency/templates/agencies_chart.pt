<div metal:use-macro="layout.base" i18n:domain="onegov.agency">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">

        <p tal:condition="not:agencies" i18n:translate="">No agencies added yet.</p>

        <a class="button hollow" href="${request.link(agencies_collection)}" i18n:translate="">Back to list view</a>
        <script src="https://d3js.org/d3.v7.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/d3-org-chart@3"></script>
        <script src="https://cdn.jsdelivr.net/npm/d3-flextree@2.1.2/build/d3-flextree.js"></script>

        <div class="chart-container">
            <div class="loading-info">
                <i class="fas fa-spinner fa-spin"></i> <span i18n:translate>Loading agencies...</span>
            </div>
        </div>

        <div class="orgchart" data-url="${request.link(agencies_collection, name='json')}">
        </div>


    </tal:block>
</div>
