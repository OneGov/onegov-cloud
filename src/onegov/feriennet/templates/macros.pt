    </tal:b>
    <tal:b condition="request.locale.startswith('fr')">
        <a href="https://www.projuventute.ch/Reseau-vacances.4036.0.html?&L=1" class="onegov-award">
            <img src="${layout.static_file_path('onegov-award.png')}"
