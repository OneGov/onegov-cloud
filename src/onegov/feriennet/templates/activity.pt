<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <metal:hint use-macro="layout.macros['empty_page_lead_hint']" tal:define="item activity"/>

        <tal:b condition="activity.state == 'preview'">
            <div class="panel callout" tal:condition="request.is_organiser_only" i18n:translate>
                This is a preview. Please edit it until you are satisifed with the result and then press "Request Publication". An administrator will then review your proposal.
            </div>
            <div class="panel callout" tal:condition="request.is_admin" i18n:translate>
                This is a preview. Please edit it until you are satisifed with the result and then press "Request Publication" to mark the activity ready for review.
            </div>
        </tal:b>

        <tal:b condition="activity.state == 'proposed' and request.is_organiser_only">
            <div class="panel callout" i18n:translate>
                This activity is currently being reviewed by an administrator.
            </div>
        </tal:b>

        <tal:b condition="activity.state == 'archived'">
            <div class="panel callout" i18n:translate>
                This activity has been archived.
            </div>
        </tal:b>

        <tal:b metal:use-macro="layout.macros.activity_detailed" tal:define="show_ticket_panel True">
            <metal:b fill-slot="after-text">
                <div tal:condition="not occasions_by_period and not occasions_current_period">
                    <h3 i18n:translate>Occasions</h3>
                    <p i18n:translate>
                        There are currently no occasions planned.
                    </p>
                </div>


                <tal:b condition="occasions_current_period">
                    <tal:b tal:define="(title, occasions) occasions_current_period[0]; period occasions[0].period">
                        <div class="activity-active-period">
                            <h3>${title}</h3>
                            <p class="hint">
                                <tal:b tal:condition="len(phases_date) == 2">
                                    <span>
                                        <b><tal:b i18n:translate>Prebooking</tal:b>: </b><span>${phases_date[1]}</span>
                                    </span>
                                </tal:b>
                                <tal:b tal:condition="len(phases_date)">
                                    <span>
                                        <b><tal:b i18n:translate>Booking</tal:b>: </b><span>${phases_date[0]}</span>
                                    </span>
                                </tal:b>
                            </p>
                        </div>
                        <tal:b metal:use-macro="layout.macros['occasions-by-period']" />
                    </tal:b>
                </tal:b>
                <h3 i18n:translate tal:condition="occasions_by_period">Other Occasions</h3>
                <ul class="accordion" data-accordion data-allow-all-closed="true">

                    <tal:b define="today layout.today()" condition="occasions_by_period" repeat="(title, occasions) occasions_by_period">
                        <li tal:define="period occasions[0].period" class="occasions-by-period accordion-item" data-accordion-item tal:condition="period.active or (request.is_admin or activity.username == request.current_username)">
                            <a href="occasions-for-${period.id.hex}" class="accordion-title">
                                <b>${title}</b> - <span>${layout.format_date_range(period.booking_start, period.booking_end)}</span>
                            </a>

                            <div class="accordion-content" data-tab-content id="occasions-for-${period.id.hex}">
                                <tal:b metal:use-macro="layout.macros['occasions-by-period']" />
                            </div>
                        </li>
                    </tal:b>

                </ul>

            </metal:b>
        </tal:b>
    </tal:b>
</div>
