<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div id="activities-page">
            <div class="grid-x grid-padding-x content" >
                <div class="cell small-12 medium-9">
                    <tal:b metal:use-macro="layout.macros['filters']" />
                </div>
                <div class="cell small-12 medium-3">
                    <tal:b metal:use-macro="layout.macros['volunteer-cart']" tal:define="is_dropdown True"/>
                </div>

            <div class="small-12 cell content">
                <div class="panel">
                    <tal:b i18n:translate>
                        Join us as a volunteer. Select the activities you are interested in and fill out the volunteer form. We will contact you afterwards. Activities not listed
                        here are not actively looking for volunteers.
                    </tal:b>
                    <tal:b i18n:translate>
                        Note that we cannot guarantee that you will be placed in the same activity as your children.
                    </tal:b>
                </div>

                <div id="activities" class="activities-list grid-x grid-padding-x">
                    <tal:b tal:repeat="activity activities" tal:condition="activities">
                        <div class="subpage-cards small-12 medium-6 large-4 cell" tal:define="occasions occasions_for_volunteer(activity)" tal:condition="python: any(wants_more_volunteers(need) for occasion in occasions for need in occasion.needs)">
                            <div class="activity-list-item card">
                                <div class="grid-x align-middle">
                                    <div tal:condition="activity.thumbnail|nothing" style="width: 100%; padding-bottom: 60%; background-image: url('${activity.thumbnail}'); background-size: cover;"></div>
                                    <div class="cell small-12 card-section">
                                        <a href="${request.link(activity)}">
                                        <h5>${activity.title}</h5>
                                        <span class="page-lead" tal:content="layout.paragraphify(layout.linkify(activity.lead))"/></a>

                                        <div class="columns small-10">
                                            <tal:b repeat="occasion occasions">
                                                <div class="call-for-volunteers" tal:define="dates exclude_filtered_dates(layout.model, occasion.dates)" tal:condition="any(wants_more_volunteers(need) for need in occasion.needs) and occasion.seeking_volunteers and dates">

                                                    <h3 i18n:translate>Occasion</h3>
                                                    <ul class="dense">
                                                        <li tal:repeat="date dates">
                                                            ${layout.format_datetime_range(date.localized_start, date.localized_end)}
                                                        </li>
                                                    </ul>
                                                        <h3 i18n:translate>Needs</h3>
                                                        <ul class="dense needs">
                                                            <tal:b repeat="need occasion.needs">
                                                                <li tal:condition="need.accept_signups" tal:condition="wants_more_volunteers(need)">
                                                                    <span>${need.name}</span>

                                                                    <a class="button narrow" data-need="${need.id.hex}" data-error-container="#error-for-${occasion.id.hex}">
                                                                        <i class="fa fa-plus" aria-hidden="true"></i>
                                                                        <span><tal:b i18n:translate>To my list</tal:b></span>
                                                                    </a>
                                                                </li>
                                                            </tal:b>
                                                        </ul>

                                                    <div id="error-for-${occasion.id.hex}" class="alert" style="display: none;"></div>
                                                </div>
                                            </tal:b>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tal:b>
                </div>
                <div id="show-more-target" class="grid-x grid-padding-x">
                    <div class="cell small-12">

                        <div class="show-more" tal:condition="activities">
                            <tal:b define="next_page layout.model.by_page_range((0, (layout.model.page_range[1] + 1)))" condition="layout.model.next">
                                <a class="button"
                                    href="${request.link(next_page)}"
                                    ic-get-from="${request.link(next_page, name='volunteer')}"
                                    ic-select-from-response="#content"
                                    ic-target="#content"
                                    i18n:translate>
                                        Show more
                                </a>
                            </tal:b>
                            <div ></div>
                            <a href="#" class="navigate-up"
                                data-location="${current_location}"
                                id="click-to-load-location"
                                ><i class="fa fa-chevron-up"></i> <span i18n:translate>Navigate up</span></a>
                        </div>
                    </div>
                </div>
                <div class="grid-x grid-padding-x">
                    <div class="cell small-12" tal:condition="not:activities">
                        <p i18n:translate>No activities found.</p>
                        <b><a class="button hollow" tal:condition="filtered" href="${request.class_link(layout.model.__class__)}/volunteer" i18n:translate>Reset filter.</a></b>
                    </div>
                </div>

            </div>

        </div>
        </div>
    </tal:b>
</div>