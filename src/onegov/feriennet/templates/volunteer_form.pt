<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="grid-x grid-padding-x content" tal:condition="not:complete">
            <div class="cell small-12 medium-9">
                <tal:b metal:use-macro="layout.macros['volunteer-cart']" tal:define="is_dropdown False"/>
                <div metal:use-macro="layout.macros['form']" />
            </div>
        </div>
        <div class="grid-x grid-padding-x content" tal:condition="complete">
            <div class="cell small-12 medium-9">
                <div class="panel">
                    <tal:b i18n:translate>
                        Thank you for offering to volunteer! We will have a look at
                        your request and get back to you.
                    </tal:b>
                    <br><br><a href="${request.link(request.app.org)}" i18n:translate>
                        Back to the homepage
                    </a>
                </div>
            </div>
        </div>
    </tal:b>
</div>