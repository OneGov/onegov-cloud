<div metal:use-macro="layout.base" i18n:domain="onegov.translator_directory">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="row">
            <div class="columns small-12">
                <div class="row">
                    <div class="columns small-12 medium-6">
                        <div>
                            <p tal:condition="not: languages" i18n:translate="">
                                No results found
                            </p>
                            <table class="languages-table" tal:condition="languages">
                                <thead>
                                    <th i18n:translate="">Name</th>
                                    <th i18n:translate="">Speakers</th>
                                    <th i18n:translate="">Writers</th>
                                </thead>
                                <tbody>
                                    <tr tal:repeat="language languages">
                                        <td>${language.name}</td>
                                        <td>${len(language.speakers)}</td>
                                        <td>${len(language.writers)}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </tal:b>
</div>