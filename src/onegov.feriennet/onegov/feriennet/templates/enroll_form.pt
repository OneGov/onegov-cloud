<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>

    <tal:block metal:fill-slot="content">
        <div class="callout panel" tal:condition="request.current_username != form.username" i18n:translate>
            For <strong i18n:name="user" tal:content="form.user.title" />
        </div>

        <div class="row">
            <div class="columns small-12 medium-6 enroll-form">
                <h2>${occasion.activity.title}</h2>

                <div class="occasions">
                    <h3>${layout.format_datetime_range(occasion.localized_start, occasion.localized_end)}</h3>
                    <tal:block metal:use-macro="layout.macros.occasion" />
                </div>

                <div class="row">
                    <div class="small-12 columns">
                        <div metal:use-macro="layout.macros['form']" />
                    </div>
                </div>
            </div>
            <div class="columns small-12 medium-6">
                <tal:block condition="request.is_admin">
                    <h2 i18n:translate>Users</h2>
                    <ul>
                        <li tal:repeat="user users">
                            <a tal:condition="user.username != form.username" href="${form.for_username(user.username)}">${user.title}</a>
                            <strong tal:condition="user.username == form.username">${user.title}</strong>
                        </li>
                    </ul>
                </tal:block>
            </div>
        </div>
    </tal:block>
</div>
