<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">

        <div class="activity-list-search row collapse">
            <div class="columns small-12">
                <h2 i18n:translate class="show-for-sr">Tags</h2>

                <ul class="tags" tal:condition="taglinks">
                    <li tal:repeat="link taglinks" 
                        tal:content="structure link(request)" 
                        class="${link.active and 'active'} blank-label" />
                </ul>
            </div>
        </div>

        <div class="activity-list-item" tal:condition="not:activities" i18n:translate>
            No activites found.
        </div>

        <div class="activity-list-item" tal:repeat="activity activities">
            <h3><a href="${request.link(activity)}">${activity.title}</a></h3>
            <p class="page-lead">${activity.lead}</p>

            <div class="row">
                <div class="small-12 medium-4 columns factoids">
                    <tal:block condition="activity.ages">
                        <div class="age" tal:define="
                            min_age min(a.lower for a in activity.ages);
                            max_age max(a.upper - 1 for a in activity.ages);
                        ">
                            <span i18n:translate class="show-for-sr">Age</span>
                            <span i18n:translate>
                                <tal:block replace="min_age" i18n:name='min_age' />
                                -
                                <tal:block replace="max_age" i18n:name='max_age' />
                                years old
                            </span>
                        </div>
                    </tal:block>
                </div>
            </div>
        </div>

        <div class="pagination-centered">
            <div metal:use-macro="layout.macros['pagination']" tal:define="
            collection layout.model; current_page layout.model;" />
        </div>
    </tal:block>
</div>