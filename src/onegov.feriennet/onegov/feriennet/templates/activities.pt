<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">

        <div class="activity-list-search row collapse" tal:condition="taglinks">
            <div class="columns small-12">
                <h2 i18n:translate class="show-for-sr">Tags</h2>

                <ul class="tags">
                    <li tal:repeat="link taglinks" 
                        tal:content="structure link(request)" 
                        class="${link.active and 'active'} blank-label" />
                </ul>
            </div>
        </div>

        <div class="activity-list-item" tal:condition="not:activities" i18n:translate>
            No activites found.
        </div>

        <div class="activity-list-item" tal:repeat="activity activities">
            <h3><a href="${request.link(activity)}">${activity.title}</a></h3>
            <p class="page-lead">${activity.lead}</p>

            <div class="row" tal:define="
                ages get_ages(activity);
                min_cost get_min_cost(activity);
                occasion_count get_occasion_count(activity);
            ">
                <div class="small-12 columns factoids">
                    <tal:block condition="ages">
                        <span class="age" tal:define="
                            min_age min(age.lower for age in ages);
                            max_age max(age.upper - 1 for age in ages);
                        ">
                            <span i18n:translate class="show-for-sr">Age</span>
                            <span i18n:translate>
                                <tal:block replace="min_age" i18n:name='min_age' />
                                -
                                <tal:block replace="max_age" i18n:name='max_age' />
                                years old
                            </span>
                        </span>
                    </tal:block>
                    <tal:block condition="min_cost is not None">
                        <span class="cost">
                            <span i18n:translate class="show-for-sr">Cost</span>

                            <span i18n:translate>
                                starting at <tal:block i18n:name='price'>${'{:.2f}'.format(min_cost)}</tal:block> CHF
                            </span>
                        </span>
                    </tal:block>
                    <tal:block>
                        <span class="occasion-count">
                            <span i18n:translate class="show-for-sr">Occasions</span>

                            <span i18n:translate tal:condition="not occasion_count">
                                No occasions
                            </span>
                            <span i18n:translate tal:condition="occasion_count == 1">
                                1 Occasion
                            </span>
                            <span i18n:translate tal:condition="occasion_count > 1">
                                <tal:block i18n:name="count">${occasion_count}</tal:block> Occasions
                            </span>
                        </span>
                    </tal:block>
                </div>
            </div>
        </div>

        <div class="pagination-centered">
            <div metal:use-macro="layout.macros['pagination']" tal:define="
            collection layout.model; current_page layout.model;" />
        </div>
    </tal:block>
</div>