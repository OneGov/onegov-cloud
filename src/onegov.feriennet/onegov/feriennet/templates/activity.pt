<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <metal:hint use-macro="layout.macros['empty_page_lead_hint']" tal:define="item activity"/>

        <tal:block metal:use-macro="layout.macros.page_content"
            tal:define="lead activity.lead;text activity.text; people activity.people; contact activity.contact_html; coordinates activity.coordinates">
        </tal:block>
    </tal:block>
</div>
