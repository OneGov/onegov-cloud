<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <tal:block condition="show_emergency_info">
            <div class="emergency-contact-missing emergency-contact" tal:condition="not:has_emergency_contact">
                <div i18n:translate>
                    You haven't added an emergency contact to your profile yet.
                    Please add this information in your userprofile so we can reach you in an emergency!
                </div>
                <a i18n:translate href="${request.return_here(request.link(request.app.org, 'userprofile'))}">Add in Userprofile</a>
            </div>
            <div class="emergency-contact" tal:condition="has_emergency_contact">
                <div i18n:translate>
                    This is your emergency contact. Please change it in the user profile if it is not up to date anymore:
                </div>
                <div>
                    <strong>${user.data.emergency}</strong>
                </div>
                <a i18n:translate href="${request.return_here(request.link(request.app.org, 'userprofile'))}">Change in Userprofile</a>
            </div>
        </tal:block>

        <div tal:condition="not:period" i18n:translate>
            No bookings yet.
        </div>

        <div class="my-bookings" tal:condition="period">
            <h2>${period.title}</h2>

            <a class="print print-all print-icon before hide-for-print" data-print-selector="html" data-print-title="${title}" i18n:translate>
                Print All
            </a>


            <div class="row">
                <div class="columns small-12 medium-8">
                    <div class="callout panel">
                        <div class="hints">
                            <tal:block metal:use-macro="layout.macros.period_hints" />

                            <div class="hint hint-favorites" tal:condition="period.wishlist_phase" i18n:translate>
                                Mark up to three occasions per child as favorites.
                            </div>

                            <div class="hint hint-matching" tal:condition="period.wishlist_phase" i18n:translate>
                                Once the pre-booking is over, we will divide all children into activities.
                            </div>

                            <div class="hint hint-fairness" tal:condition="period.wishlist_phase" i18n:translate>
                                We cannot guarantee that everyone gets into their favorite activity.
                            </div>
                        </div>
                    </div>

                    <p tal:condition="not:has_bookings" i18n:translate>
                        No bookings yet.
                    </p>

                    <tal:b
                        define="banner layout.app.banner(request, 'bookings')"
                        condition="banner"
                        replace="structure banner"
                    />

                    <div class="row attendee-bookings-row" tal:repeat="attendee attendees" tal:condition="has_bookings" id="attendee-${attendee.id.hex}">
                        <div class="columns small-12">
                            <div class="attendee-bookings">
                                <h3 class="${attendee.gender == 'male' and 'icon-male' or 'icon-female'}"><a href="${request.link(attendee)}">${attendee.name}</a></h3>

                                <a class="print print-icon before hide-for-print"
                                    data-print-selector="html" data-print-title="${title}"
                                    data-print-css="${request.link(model, 'mask') + '&id=' + attendee.id.hex}"
                                    i18n:translate>
                                    Print
                                </a>

                                <div id="alert-boxes-for-${attendee.id}"></div>

                                <div class="booking-limit">
                                    <span i18n:translate tal:condition="period.all_inclusive and period.max_bookings_per_attendee">
                                        Limited to
                                            <tal:block i18n:name="number">${period.max_bookings_per_attendee}</tal:block>
                                        bookings
                                    </span>
                                    <a i18n:translate tal:condition="not period.all_inclusive and attendee.limit" href="${request.link(attendee, 'limit')}">
                                        Limited to
                                            <tal:block i18n:name="number">${attendee.limit or 100}</tal:block>
                                        bookings
                                    </a>
                                    <span i18n:translate tal:condition="period.all_inclusive and not period.max_bookings_per_attendee">
                                        Unlimited bookings
                                    </span>
                                    <a i18n:translate tal:condition="not period.all_inclusive and not attendee.limit" href="${request.link(attendee, 'limit')}">
                                        Unlimited bookings
                                    </a>
                                </div>

                                <ul>
                                    <li tal:repeat="booking bookings_by_attendee(attendee)" id="booking-${booking.id}">
                                        <div class="row ${booking.occasion.operable and 'operable' or 'non-operable'} collapse">
                                            <div class="columns small-1 text-center">
                                                <a ic-post-to="${request.link(booking, 'toggle-star')}">
                                                    <tal:block metal:use-macro="layout.macros['star']" />
                                                </a>
                                            </div>
                                            <div class="columns small-11">
                                                <a href="${request.link(booking.occasion.activity)}">
                                                    <h4>${booking.occasion.activity.title}</h4>
                                                </a>
                                                <div class="occasion">
                                                    <ul>
                                                        <li tal:repeat="date booking.occasion.dates">
                                                            ${layout.format_datetime_range(date.localized_start, date.localized_end)}
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="cost">
                                                    <span class="${period.confirmed and booking.state != 'accepted' and 'strikethrough' or ''}" tal:define="cost booking_cost(booking)">
                                                        <tal:block condition="cost">
                                                            ${cost}
                                                        </tal:block>
                                                        <tal:block condition="not:cost" i18n:translate>
                                                            Free of charge
                                                        </tal:block>
                                                    </span>
                                                </div>
                                                <div>
                                                    <tal:block metal:use-macro="layout.macros.booking_state" define="state booking.period_bound_booking_state(period)" />

                                                    <span class="operability-warning" tal:condition="booking.state == 'accepted' and not period.wishlist_phase and not booking.occasion.operable" i18n:translate>
                                                        This occasion does not have enough attendees yet.
                                                    </span>
                                                </div>
                                                <div class="actions" tal:define="actions actions_by_booking(booking)">
                                                    <ul tal:condition="actions">
                                                        <li tal:repeat="action actions" tal:content="structure action(request)" />
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>

                                <div class="total-costs" tal:condition="period.confirmed and attendee_has_bookings(attendee) and next((b for b in bookings_by_attendee(attendee) if b.state == 'accepted'), None)">
                                    <div class="row all-inclusive" tal:condition="period.all_inclusive and period.booking_cost">
                                        <div class="columns small-8" i18n:translate>
                                            Passport
                                        </div>

                                        <div class="columns small-4">
                                            ${period.booking_cost}
                                        </div>
                                    </div>
                                    <div class="row total">
                                        <div class="columns small-8" i18n:translate>
                                            Total
                                        </div>

                                        <div class="columns small-4">
                                            ${total_by_attendee(attendee)}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="columns small-12 medium-4">
                    <tal:block metal:use-macro="layout.macros.periods" />
                    <tal:block metal:use-macro="layout.macros.users" />
                </div>
            </div>
        </div>
    </tal:block>
</div>