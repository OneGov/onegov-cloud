        ${title}
    </tal:b>
    <tal:b metal:fill-slot="body">
        <p i18n:translate>Hello!</p>
        <p i18n:translate>Your activity has been archived:</p>
        <p><b>${model.title}</b></p>
        <p>${model.lead}</p>

        <p>
            <a href="${request.link(ticket, 'status')}" i18n:translate>Check ticket status</a>
        </p>
    </tal:b>
</div>
