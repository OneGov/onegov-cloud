<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>

    <tal:block metal:fill-slot="content">

        <div class="panel callout">
            Clicking "Send" will send the e-mail below to all selected recipients.
        </div>

        <h2 i18n:translate>Preview</h2>
        <div class="notification-preview">
            <h3 tal:content="structure preview_subject" />
            <div tal:content="structure preview_body" />
            <a class="control" href="${edit_link}" i18n:translate>Edit</a>
        </div>

        <h2 i18n:translate>Send</h2>
        <div tal:condition="form.has_choices" metal:use-macro="layout.macros['form']" />
        <div tal:condition="not:form.has_choices" i18n:translate>
            There are no available recipients for your user account.
        </div>

    </tal:block>
</div>
