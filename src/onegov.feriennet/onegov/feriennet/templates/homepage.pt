<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row">
            <div class="columns small-12 medium-8 large-8">
                <h2 i18n:translate>Activities</h2>
            </div>
            <div class="columns small-12 medium-4 large-4">
                <a href="${login_url}"><h2 class="button expand" i18n:translate>Go to Login</h2></a>
                <center><a href="${register_url}" i18n:translate>Register a new account</a></center>
            </div>
        </div>
    </tal:block>
</div>