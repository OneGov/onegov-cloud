<div metal:use-macro="layout.base" i18n:domain="onegov.feriennet">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="panel" tal:condition="not:layout.app.org.bank_account" i18n:translate>
            No bank account defined. Please define a bank account in the <a href="${request.return_here('/einstellungen')}" i18n:name="link" i18n:translate>settings</a> first.
        </div>

        <div class="row" tal:condition="layout.app.org.bank_account and not uploaded">
            <div class="columns small-12 medium-8">
                <div metal:use-macro="layout.macros['form']"/>
            </div>
            <div class="columns small-12 medium-4">
                <div class="panel">
                    <p i18n:translate>
                        To import a bank statement you need an account with one of the following banks:
                    </p>
                    <ul>
                        <li><a rel="noreferrer" href="https://postfinance.ch">Postfinance</a></li>
                    </ul>
                    <p i18n:translate>
                        Your statement is required to be in "ISO-20022 format (without picture)". Banks may also refer to it as "camt.053". Be sure to ask your bank to switch your account to this format or to select this format in
                        your online banking profile.
                    </p>
                </div>
            </div>
        </div>

        <div class="row" tal:condition="uploaded">
            <div class="columns small-12 medium-8">
                <ul class="transactions">
                    <li tal:repeat="transaction transactions" class="transaction-${transaction.state}">
                        <div class="transaction-header row collapse">
                            <div class="columns small-4">
                                <div class="show-for-sr" i18n:translate>
                                    Amount
                                </div>
                                ${transaction.amount} ${transaction.currency}
                            </div>
                            <div class="columns small-8">
                                <tal:block condition="transaction.username">
                                    <div class="show-for-sr" i18n:translate>
                                        Username
                                    </div>
                                    ${users[transaction.username]}<span tal:condition="transaction.confidence == 0.5">?</span>
                                </tal:block>
                                <tal:block condition="not transaction.username">
                                    <div class="show-for-sr" i18n:translate>
                                        Username
                                    </div>
                                    <span i18n:translate>Unknown</span>
                                </tal:block>
                            </div>
                        </div>
                        <div class="transaction-details row collapse">
                            <div class="columns small-12 medium-6">
                                <dl>
                                    <tal:block condition="transaction.valuta_date">
                                        <dt i18n:translate>Valuta Date</dt>
                                        <dd>${layout.format_date(transaction.valuta_date, 'date')}</dd>
                                    </tal:block>

                                    <tal:block condition="transaction.debitor_account">
                                        <dt i18n:translate>Account</dt>
                                        <dd>${transaction.debitor_account}</dd>
                                    </tal:block>

                                    <tal:block condition="transaction.debitor">
                                        <dt i18n:translate>Account Owner</dt>
                                        <dd>${transaction.debitor}</dd>
                                    </tal:block>

                                    <tal:block condition="transaction.reference">
                                        <dt i18n:translate>Reference Number</dt>
                                        <dd>${transaction.reference}</dd>
                                    </tal:block>
                                </dl>
                            </div>

                            <div class="columns small-12 medium-6">
                                <dl>
                                    <tal:block condition="transaction.note">
                                        <dt i18n:translate>Note</dt>
                                        <dd>${transaction.note}</dd>
                                    </tal:block>

                                    <tal:block condition="transaction.booking_text">
                                        <dt i18n:translate>Booking Text</dt>
                                        <dd>${transaction.booking_text}</dd>
                                    </tal:block>

                                    <tal:block condition="transaction.username">
                                        <dt i18n:translate>Investigate</dt>
                                        <dd><a href="${user_link(transaction.username)}" i18n:translate>
                                            Show <tal:block i18n:name="user" tal:replace="users[transaction.username]"/>'s bills.
                                        </a></dd>
                                    </tal:block>
                                </dl>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="columns small-12 medium-4">
                <div>
                    <a ic-post-to="${post_url}" redirect-after="${request.link(model)}" class="button expand" i18n:translate>Import <tal:block i18n:name="count">${success_count}</tal:block> payments</a>
                </div>
                <div class="side-panel">
                    <h2 i18n:translate>Legend</h2>
                    <ul class="legend fa-ul">
                        <li>
                            <i class="fa-li fa fa-check-circle fa-fw green" aria-hidden="true"></i>
                            <span i18n:translate>Payment detected.</span>
                        </li>
                        <li>
                            <i class="fa-li fa fa-exclamation-triangle fa-fw orange" aria-hidden="true"></i>
                            <span i18n:translate>The amount, note or reference is wrong.</span>
                        </li>
                        <li>
                            <i class="fa-li fa fa-clone fa-fw blue" aria-hidden="true"></i>
                            <span i18n:translate>The payment was found twice.</span>
                        </li>
                        <li>
                            <i class="fa-li fa fa-check-circle-o gray-dark" aria-hidden="true"></i>
                            <span i18n:translate>The payment has already been imported.</span>
                        </li>
                        <li>
                            <i class="fa-li fa fa-question-circle fa-fw red" aria-hidden="true"></i>
                            <span i18n:translate>Could not match the payment to a bill.</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </tal:block>
</div>
