<div metal:use-macro="layout.base" i18n:domain="onegov.wtfs">
    <tal:block metal:fill-slot="title">${layout.title}</tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row">
            <div class="columns small-12">
                <h1>${layout.title}</h1>
                <table class="user-groups">
                    <thead>
                        <tr>
                            <th i18n:translate>Name</th>
                            <th i18n:translate>Number of users</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="group layout.model.query()">
                            <td><a href="${request.link(group)}">${group.name}</a></td>
                            <td>${group.users.count()}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </tal:block>
</div>
