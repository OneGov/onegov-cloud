<div metal:use-macro="layout.base" i18n:domain="onegov.wtfs">
    <tal:block metal:fill-slot="title">${layout.title}</tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row">
            <div class="columns small-12">
                <h1>${layout.title}</h1>

                <dl>
                    <dt i18n:translate>Municipality</dt>
                    <dd>
                        <a tal:condition="layout.model.municipality" href="${request.link(layout.model.municipality)}">${layout.model.municipality.name}</a>
                    </dd>

                    <dt i18n:translate>Users</dt>
                    <dd tal:repeat="user layout.model.users">
                        <a href="${request.link(user)}">${user.title}</a>
                    </dd>
                </dl>
            </div>
        </div>
    </tal:block>
</div>
