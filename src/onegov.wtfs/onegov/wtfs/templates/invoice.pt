<div metal:use-macro="layout.base" i18n:domain="onegov.wtfs">
    <tal:block metal:fill-slot="title">${layout.title}</tal:block>
    <tal:block metal:fill-slot="content">
        <h1>${layout.title}</h1>
        <div class="panel" tal:condition="result|False">
            <p i18n:translate><span tal:replace="count" i18n:name="count" /> invoice(s) have been created.</p>
            <p i18n:translate>Total without VAT: CHF <span tal:replace="layout.format_number(total)" i18n:name="total" />.</p>
            <p>
                <a href="data:text/plain;base64,${data}" download="rechnungen.csv" i18n:translate class="invoice">Download file</a>
                <span i18n:translate>Right-click on the link and select "Save target as" to save the file.</span>
            </p>
        </div>
        <div tal:condition="not:result|False" class="row">
            <div class="small-12 columns">
                <div tal:condition="form.error_message|form.errors|nothing" data-alert class="alert-box alert">
                    <tal:block tal:condition="not:form.error_message|nothing" i18n:translate>The form contains errors. Please check the fields marked in red.</tal:block>
                    <tal:block tal:condition="form.error_message|nothing" i18n:translate>${form.error_message}</tal:block>
                </div>
                <div metal:use-macro="layout.macros['form']" />
            </div>
        </div>
    </tal:block>
</div>
