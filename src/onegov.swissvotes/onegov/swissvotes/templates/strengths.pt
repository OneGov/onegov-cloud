                    </tr>
                    <tr tal:condition="vote.national_council_share_ubrige">
                        <td i18n:translate>Others</td>
                        <td i18n:translate>unknown</td>
                        <td>${layout.format_number(vote.national_council_share_ubrige, 1)}%</td>
                    </tr>
                </tbody>
            </table>

        </tal:block>
    </tal:block>
</div>
