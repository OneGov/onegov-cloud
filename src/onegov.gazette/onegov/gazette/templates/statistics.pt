<div metal:use-macro="layout.base" i18n:domain="onegov.gazette">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">

        <div metal:use-macro="layout.macros['tab_menu']"></div>
        <div metal:use-macro="layout.macros['breadcrumbs']"></div>

        <div class="row statistics">
            <div class="small-12 columns">
                <h2 i18n:translate>${title}</h2>

                <h3 i18n:translate>By Category</h3>
                <table class="statistics-by-category stackable">
                    <thead>
                        <tr>
                            <th i18n:translate>Category</th>
                            <th i18n:translate>Title</th>
                            <th i18n:translate class="right-aligned">Number of Notices</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tal:block tal:repeat="result by_category">
                            <tr>
                                <td>${result[0]}</td>
                                <td>${result[1]}</td>
                                <td class="right-aligned">${result[2]}</td>
                            </tr>
                        </tal:block>
                    </tbody>
                </table>
                <p><a href="${request.link(collection, 'statistics-categories')}"><i class="fa fa-arrow-circle-o-down" aria-hidden="true"></i> <span i18n:translate>Download the results as CSV.</span></a></p>

                <h3 i18n:translate>By Groups</h3>
                <table class="statistics-by-groups stackable">
                    <thead>
                        <tr>
                            <th i18n:translate>Group</th>
                            <th i18n:translate class="right-aligned">Number of Notices</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tal:block tal:repeat="result by_groups">
                            <tr>
                                <td>${result[0]}</td>
                                <td class="right-aligned">${result[1]}</td>
                            </tr>
                        </tal:block>
                    </tbody>
                </table>
                <p><a href="${request.link(collection, 'statistics-groups')}"><i class="fa fa-arrow-circle-o-down" aria-hidden="true"></i> <span i18n:translate>Download the results as CSV.</span></a></p>

            </div>
        </div>

    </tal:block>
</div>
