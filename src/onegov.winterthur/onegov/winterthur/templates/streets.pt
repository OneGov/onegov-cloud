<div metal:use-macro="layout.base" i18n:domain="onegov.winterthur">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <p tal:condition="not:streets" i18n:translate="">No streets found.</p>

        <div tal:condition="streets" tal:repeat="(letter, streets) streets.items()" class="letter-block letter-${letter}">
            <a name="${letter}" class="anchor">${letter}</a>
            <ul class="streetlist letter-${letter}">
                <li tal:repeat="street streets">
                    <a href="${link_to_street(street.street)}">${street.street}</a>
                </li>
            </ul>
        </div>
    </tal:b>
</div>
