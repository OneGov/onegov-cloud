<div metal:use-macro="layout.base" i18n:domain="onegov.agency">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <metal:hint use-macro="layout.macros['hidden_from_public_hint_long']" tal:define="item person"/>

        <div class="row">
            <div class="columns medium-8">

                <div metal:use-macro="layout.macros['person_card']" />

            </div>
            <div class="columns medium-4">

                <div tal:condition="True" class="person-exports borderless-side-panel">
                    <h2 i18n:translate>Exports</h2>
                    <ul class="person-export-list">
                        <li>
                            <a href="${request.link(person, 'vcard')}" i18n:translate>
                                Export a vCard of this person
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </tal:block>
</div>
