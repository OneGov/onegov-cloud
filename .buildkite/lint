#!/usr/bin/env bash
set -euo pipefail

# automatically open the log output group if there's an error
trap 'echo "^^^ +++"' ERR

echo "--- Installing requirements"
# we need these because mypy needs to install onegov[mypy]
rm /etc/apt/preferences
install-packages \
    wget \
    apparmor \
    curl \
    git-core \
    postgresql \
    redis \
    openjdk-8-jre-headless \
    gcc \
    libc-dev \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libdrm2 \
    libgbm1 \
    libnspr4 \
    libnss3 \
    libu2f-udev \
    libvulkan1 \
    libx11-xcb1 \
    libxcb-dri3-0 \
    libxshmfence1 \
    libxss1 \
    xdg-utils

echo "--- Installing prerequisites"
pip install flake8 flake8-bugbear flake8-pyi bandit[toml] .[mypy]

echo "--- Linting"
flake8 src/ tests/ stubs/

echo "--- Check security issues"
bandit --recursive --configfile pyproject.toml src/

echo "--- Static type checking"
mypy -p onegov
